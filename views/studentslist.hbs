<h3 class="text-center m-3">List OF Students</h3>
<div class="row">
    <div class="col-4 mb-3">
        <input class="form-control fa fa-search" id="myInput" type="text" placeholder="Search..">
    </div>
</div>

<table class="table table-responsive table-striped table-bordered table-green table-dark">
    <thead class="thead-light">
        <th>ID</th>
        <th>FIRST NAME</th>
        <th>MIDDLE NAME</th>
        <th>LAST NAME</th>
        <th>DATE OF BIRTH</th>
        <th>SEX</th>
        <th>AGE</th>
        <th>ADDRESS</th>
        <th>PHONE NUMBER</th>
        <th>CLASS</th>
        <th>DATE ADMITTED</th>
        <th colspan="2">ACTION</th>
    </thead>
    <tbody id="tablerow">
        {{#each data}}
        <tr>
            <td>{{ID}}</td>
            <td>{{firstname}}</td>
            <td>{{middlename}}</td>
            <td>{{lastname}}</td>
            <td>{{dateofbirth}}</td>
            <td>{{sex}}</td>
            <td>{{age}}</td>
            <td>{{address}}</td>
            <td>{{phoneno}}</td>
            <td>{{class_name}}</td>
            <td>{{admissiondate}}</td>
            <td> <a class="btn btn-sm btn-warning" href="/students/edit/{{ID}}">EDIT</a></td>
            <td><a class="btn btn-sm btn-danger" href="/students/delete/{{ID}}">DELETE</a></td>
            <td><a class="btn btn-sm btn-success" href="/students/profile/{{ID}}">DETAILS</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>