<h3 class="text-center mt-5 mb-5">List OF Classes</h3>
<div class="row">
    <div class="col-4 mb-3">
        <input class="form-control fa fa-search" id="myInput" type="text" placeholder="Search..">
    </div>
</div>
<table class="table table-responsive table-striped table-bordered table-dark">
    <thead class="thead-light">
        <th>ID</th>
        <th>CLASS NAME</th>
        <th>CLASS CATEGORY</th>
        <th colspan="2">ACTION</th>
    </thead>
    <tbody id="tablerow">
        {{#each data}}
        <tr>
            <td>{{ID}}</td>
            <td>{{class_name}}</td>
            <td>{{name}}</td>

            <td> <a class="btn btn-sm btn-warning" href="/class/edit/{{ID}}">EDIT</a></td>
            <td><a class="btn btn-sm btn-danger" href="/class/delete/{{ID}}">DELETE</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>