<div class="container">
    <div class="row">
        <div class="col-7 offset-3">
            <div class="card mb-5 mt-5">
                <form class="well form-horizontal" action=" " method="post" id="" action="/apply">


                    <!-- Form Name -->
                    <div class="card-header">
                        <h3>Create a Class</h3>
                    </div>

                    <!-- Text input-->
                    <div class="card-body">
                        <div class="form-group col-8 offset-2">
                            <label class="form-check-label">CLASS NAME</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input name="class_name" placeholder="class Name" value="" class="form-control"
                                    type="text">
                            </div>
                        </div>
                        <div class="form-group col-8 offset-2">
                            <label class="form-check-label">CLASS CATEGORY</label>
                            <div class="input-group">
                                <select name="categoryname" placeholder="category" value="{{name}}" class="form-control"
                                    type="text">
                                    {{#each data}}
                                    <option>{{name}}</option>
                                    {{/each}}

                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">

                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">SUBMIT
                                </button>
                            </div>
                        </div>
                    </div>
                </form>


            </div>
        </div>
    </div>

</div>



