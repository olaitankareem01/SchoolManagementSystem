<div class="container">
    <div class="row mt-3 mb-3">
        <div class="col-8 offset-2">

            <div class="card">
                <div class="card-header">
                    <h2 class="text-center"><b> Edit Student's Details</b></h2>
                </div>

                <div class="card-body">
                    <form class="form-horizontal" method="post" id="contact_form" action="/students/edit/:ID">



                        <input type="hidden" name='ID' value="{{ID}}">

                        <!-- Text input-->

                        <div class="form-group">
                            <label class="col-md control-label">First Name</label>
                            <div class="col-md-11 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input name="firstname" placeholder="First Name" value="{{firstname}}"
                                        class="form-control" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Middle Name</label>
                            <div class="col-md-11 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input name="middlename" placeholder="Last Name" value="{{middlename}}"
                                        class="form-control" type="text">
                                </div>
                            </div>
                        </div>
                        <!-- Text input-->

                        <div class="form-group">
                            <label class="col-md-4 control-label">Last Name</label>
                            <div class="col-md-11 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input name="lastname" placeholder="Last Name" value="{{lastname}}"
                                        class="form-control" type="text">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">sex</label>
                            <div class="col-md-11 selectContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                    <select name="sex" class="form-control selectpicker">
                                        <option value="{{sex}}">Select your Gender</option>
                                        <option>male</option>
                                        <option>female</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Text input-->

                        <div class="form-group">
                            <label class="col-md-4 control-label">Age</label>
                            <div class="col-md-11 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input name="age" placeholder="Age" value="{{age}}" class="form-control"
                                        type="number">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Date of Birth</label>
                            <div class="col-md-11 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input name="dateofbirth" placeholder="Date of birth" value='' class="form-control"
                                        type="date">
                                </div>
                            </div>
                        </div>
                        <!-- Text input-->

                        {{!-- <div class="form-group"> --}}
                        {{!-- <label class="col-md-4 control-label">Education level</label> --}}
                        {{!-- <div class="col-md-4 inputGroupContainer"> --}}
                        {{!-- <input id='category-id' name='category_id' value='' class="form-control"> --}}
                        {{!-- </div> --}}
                        {{!-- </div> --}}
                        <div class="form-group">
                            <label class="col-md-4 control-label">Class</label>
                            <div class="col-md-11 inputGroupContainer">
                                <input name='class_id' value='{{class_id}}' required class="form-control">
                            </div>
                        </div>
                        <!-- Text input-->

                        <div class="form-group">
                            <label class="col-md-4 control-label">Address</label>
                            <div class="col-md-11 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input name="address" placeholder="Your Adddress" value='{{address}}'
                                        class="form-control" type="text">
                                </div>
                            </div>
                        </div>


                        <!-- Text input-->

                        <div class="form-group">
                            <label class="col-md-4 control-label">Phone Number</label>
                            <div class="col-md-11 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                    <input name="phoneno" placeholder="234-999-564-873" value='{{phoneno}}'
                                        class="form-control" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Date Admitted</label>
                            <div class="col-md-11 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                    <input name="admissiondate" placeholder="" value='' class="form-control"
                                        type="date">
                                </div>
                            </div>
                        </div>
                        <!-- Select Basic -->

                        <!-- Success message -->
                        <div class="alert alert-success" role="alert" id="success_message">Success <i
                                class="glyphicon glyphicon-thumbs-up"></i> Success!.</div>

                        <!-- Button -->
                        <div class="form-group">
                            <label class="col-md-4 control-label"></label>
                            <div class="col-md-4"><br>
                                <button type="submit" class="btn btn-warning">SUBMIT
                                </button>
                            </div>
                        </div>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div><!-- /.container -->