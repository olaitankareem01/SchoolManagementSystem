<div class="container">
    <div class="row pt-3">
        <div class="col-md-8  offset-1 justify-content-center">

            <div class="card">
                <div class="card-header text-center"><b>sign up to create an account</b></div>
                <div class="card-body">
                    <form method="POST" action='/users/signup'>

                        <div class=" form-row">

                            <div class="form-group col-6">
                                <label class="form-check-label"></label>FIRSTNAME</label>

                                <input class="form-control" name='firstname' type='text' id='fname' required>
                            </div>
                            <div class="form-group col-6">
                                <label class="form-check-label">LASTNAME</label>
                                <input class="form-control" name='lastname' type='text' id='lname' required />
                            </div>
                        </div>
                        <div class=" form-row ">
                            <div class="form-group col-6">
                                <label class="form-check-label">EMAIL</label>
                                <input class="form-control" name='email' type='email' id='mail' required />
                            </div>

                            <div class="form-group col-6">
                                <label class="form-check-label">PHONE_NO</label>
                                <input class="form-control" name='phone_no' type='tel' id='phoneno'>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-6">
                                <label class="form-check-label">PASSWORD</label>
                                <input class="form-control" name='password1' type='password' id='pwd1'>
                            </div>
                            <div class="form-group col-6">
                                <label class="form-check-label">confirm password</label>
                                <input class="form-control" name='password2' type='password' id='pwd2'>
                            </div>
                        </div>
                </div>
                <div class=" card-footer text-center">
                    <button class="btn btn-success" type="submit">Sign up</button>
                </div>
                </form>
            </div>
            <p class="alert alert-warning">{{message}}</p>
        </div>
    </div>
</div>