<h3 class="text-center mt-5 mb-5">List OF Class Categories</h3>

<table class="table table-responsive table-striped table-bordered table-dark">
    <thead class="thead-light">
        <th>ID</th>
        <th>CATEGORY NAME</th>
        <th colspan="2">ACTION</th>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{ID}}</td>
            <td>{{name}}</td>


            <td> <a class="btn btn-sm btn-warning" href="/categories/edit/{{ID}}">EDIT</a></td>
            <td><a class="btn btn-sm btn-danger" href="/categories/delete/{{ID}}">DELETE</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>