<div class="container">
    <div class="row pt-3">
        <div class="col-md-8  offset-1 justify-content-center">

            <div class="card">
                <div class="card-header text-center"><b>fill the form to edit user details</b></div>
                <div class="card-body">
                    <form method="POST" action='/users/edit'>

                        <div class=" form-row">
                            <input class="form-control" name='ID' value='{{ID}}' type='hidden' required>
                            <div class="form-group col-6">
                                <label class="form-check-label"></label>FIRSTNAME</label>

                                <input class="form-control" name='firstname' value='{{firstname}}' type='text' required>
                            </div>
                            <div class="form-group col-6">
                                <label class="form-check-label">LASTNAME</label>
                                <input class="form-control" name='lastname' value='{{lastname}}' type='text' required />
                            </div>
                        </div>
                        <div class=" form-row ">
                            <div class="form-group col-6">
                                <label class="form-check-label">EMAIL</label>
                                <input class="form-control" name='email' value='{{email}}' type='email' required />
                            </div>

                            <div class="form-group col-6">
                                <label class="form-check-label">PHONE_NO</label>
                                <input class="form-control" name='phone_no' value='{{phone_no}}' type=' tel'>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-6">
                                <label class="form-check-label">PASSWORD</label>
                                <input class="form-control" name='password1' type='password'>
                            </div>
                            <div class="form-group col-6">
                                <label class="form-check-label">confirm password</label>
                                <input class="form-control" name='password2' type='password'>
                            </div>
                        </div>
                </div>
                <div class=" card-footer text-center">
                </div>
                </form>
            </div>
        </div>
    </div>
</div>