<div class="container">
    <div class="row mt-5 mb-5">
        <div class="col-md-7 offset-3">
            <div class="card">



                <div class="card-header">
                    <!-- Form Name -->

                    <h2 class="card-title text-center ">Application Form</h2>

                </div>
                <div class="card-body">
                    <form class="well form-horizontal justify-content-center" onsubmit="congrats()" id="applicationform"
                        method="post" action="/apply">
                        <!-- Text input-->
                        <div class="form-row">
                            <div class="form-group col-6">
                                <label class="form-check-label">First Name</label>
                                <input name="firstname" placeholder="First Name" value="" class="form-control"
                                    type="text">
                            </div>
                            <div class="form-group col-6">
                                <label class="form-check-label">Middle Name</label>
                                <input name="middlename" placeholder="Last Name" value="" class="form-control"
                                    type="text">
                            </div>


                        </div>


                        <!-- Text input-->
                        <div class="form-row">
                            <div class="form-group col-6">
                                <label class=" form-check-label">Last Name</label>
                                <input name="lastname" placeholder="Last Name" value="" class="form-control"
                                    type="text">
                            </div>
                            <div class="form-group col-6">
                                <label class=" form-check-label">Sex</label>
                                <select name="sex" class="form-control selectpicker">
                                    <option value="sex">Select your Gender</option>
                                    <option>male</option>
                                    <option>female</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-row ">
                            <div class="form-group col-6">
                                <label class=" form-check-label">Age</label>
                                <input name="age" placeholder="Age" value="age" class="form-control" type="number">
                            </div>
                            <div class="form-group col-6">
                                <label class="form-check-label">Date of Birth</label>
                                <input name="dateofbirth" placeholder="Date of birth" value="dateofbirth"
                                    class="form-control" type="date" max="2017-01-01">
                            </div>

                        </div>


                        <!-- Text input-->
                        <div class="form-row">
                            <div class="form-group col-6">
                                <label class="form-check-label">Education level</label>
                                <select id='category-id' name='category_id' required class="form-control">
                                </select>
                            </div>

                            <div class="form-group col-6">
                                <label class="form-check-label col-6">Class</label>
                                <select id='class-id' name='class_id' required class="form-control">
                                </select>
                            </div>

                        </div>

                        <div class="form-row">
                            <div class="form-group col-6">
                                <label class="form-check-label">Address</label>
                                <input name="address" placeholder="Your Adddress" class="form-control" type="text">
                            </div>
                            <div class="form-group col-6">
                                <label class="form-check-label">Phone Number</label>
                                <input name="phoneno" placeholder="234-999-564-873" class="form-control" type="text">
                            </div>
                        </div>
                </div>
                <!-- Select Basic -->
                <!-- Button -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-success justify-content-center" id="submitbutton">ENROLL
                        <span class="fa-fa-send"></span></button>
                </div>
            </div>
            </form>

        </div>

        </form>
    </div>
</div>
</div>
</div>
</div><!-- /.container -->


